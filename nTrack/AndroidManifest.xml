<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maciejpatro.ntrack"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.maciejpatro.ntrack.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.maciejpatro.ntrack.Login"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="com.maciejpatro.ntrack.LOGIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.maciejpatro.ntrack.MenuAc"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="com.maciejpatro.ntrack.AddProduct"
            android:label="@string/title_activity_add_product" >
        </activity>
        <activity
            android:hardwareAccelerated="false"
            android:name="com.maciejpatro.ntrack.WeigtControl"
            android:label="@string/title_activity_weigt_control" >
        </activity>
    </application>

</manifest>