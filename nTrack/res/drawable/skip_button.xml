<?xml version="1.0" encoding="utf-8"?>	
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true">
    <shape android:shape="rectangle">
        <gradient android:startColor="#FFba5252"
            android:centerColor="#FF882323"
            android:endColor="#FFba5252"
            android:angle="270" android:centerX="0.5" android:centerY="0.5" />
        <stroke android:width="2dp" android:color="#8F000000" />
        <corners android:radius="5dp" />
        <padding android:left="10dp" android:top="6dp" android:right="10dp"
            android:bottom="6dp" />
    </shape>
	</item>
    <item>
    <shape android:shape="rectangle">
        <gradient android:startColor="#FF6aa457"
            android:centerColor="#FF487e38"
            android:endColor="#FF6aa457"
            android:angle="270" android:centerX="0.5" android:centerY="0.5" />
        <stroke android:width="2dp" android:color="#8F000000" />
        <corners android:radius="5dp" />
        <padding android:left="10dp" android:top="6dp" android:right="10dp"
            android:bottom="6dp" />
    </shape>
	</item>
</selector>
